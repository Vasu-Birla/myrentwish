                      </thead>
                      <tbody>
             
                        <% for(var i = 0; i < pandps.length; i++) { %>
                          <tr class="odd">
                                  <td class="sorting_1"><%- i+1 %></td>
                                  <td><%- pandps[i].policy %></td>
                                  <td><div class="dropdown">
                                    <button class="btn mt-1 mb-1 btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                      <a class="dropdown-item"  onclick="updatepandp('<%- pandps[i].id %>','<%= JSON.stringify(pandps[i].policy) %>')" >Edit</a>
                                      <a class="dropdown-item" href="/admin/deleteuserPrivacy?pandpID=<%= pandps[i].id %>"  >Delete</a>                                       
                                    </div>
                                  </div>
                                </td>
                              </tr>

