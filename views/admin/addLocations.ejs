            <!-- Form Start -->
            <form action="/admin/addLocations" method="post">
              <!-- Location Input -->
              <div class="form-group">
                <label for="question">Enter Country</label>
                <input type="text" name="country" class="form-control" placeholder="Enter your question" required>
              </div>


              <div class="form-group">
                <label for="question">Enter City</label>
                <input type="text" name="city" class="form-control" placeholder="Enter your question" required>
              </div>

        
              <!-- Submit Button -->
              <div class="form-group add-admin col-md-12" style="margin: 10px 0px;">
                <input type="submit" name="add" class="btn btn-primary" value="Submit" style="width:20%;">
              </div>
            </form>
            <!-- Form End -->
          </div>
        </div>
      </div>
    </div>
