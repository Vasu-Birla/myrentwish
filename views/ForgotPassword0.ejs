<!DOCTYPE html>
<html lang="en">
   <head>
      <!-- Add your head content here -->
   </head>
   <body class="inner_page login">
      <div class="login-bgs">
         <div class="container-fluid">
            <div class="row">
               <div class="col-md-4">
                  <div class="login-form">
                     <div class="account-page">
                        <div class="account-center">
                           <div class="account-box">

                            <% if (output === ' Profile Updated Successfully !!' || output === 'Password changed successfully') { %>
                              <p class="success-text"><%= output %></p>
                           <% } else { %>
                              <p class="error-text"><%= output %></p>
                           <% } %>


                              <% if (showForgotPasswordForm) { %>
                              <h2>Forgot Password</h2>
                              <form method="POST" action="/sendOTP">
                                 <label for="email">Enter your email:</label>
                                 <input type="email" id="email" name="email" required><br><br>
                                 <button type="submit">Send OTP</button>
                              </form>
                              <% } else if (showVerifyOTPPrompt) { %>
                              <h2>Verify OTP</h2>
                              <form method="POST" action="/verify-otp">
                                 <label for="otp">Enter OTP:</label>
                                 <input type="text" id="otp" name="otp" required><br><br>
                                 <input type="hidden" id="email2" name="verifyEmail" value="<%- email %>" readonly><br><br>
                                 <button type="submit">Verify OTP</button>

                              </form>
                              <% } else if (showResetPasswordForm) { %>
                              <h2>Reset Password</h2>
                              <form method="POST" action="/reset-password">
                                 <label for="newPassword">Enter new password:</label>
                                 <input type="password" id="newPassword" name="npass" required><br><br>
                                 <label for="confirmPassword">Confirm new password:</label>
                                 <input type="password" id="confirmPassword" name="cpass" required><br><br>
                                 <input type="email" id="email3" name="resetemail" value="<%- email %>" readonly><br><br>
                                 <button type="submit">Reset Password</button>
                              </form>
                              <% } %>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="col-md-8">
                  <!-- Add your content for the second column here -->
               </div>
            </div>
         </div>
      </div>
      <!-- Add your scripts here -->
   </body>
</html>

